<script data-cfasync="false" src="/cdn-cgi/scripts/5c5dd728/cloudflare-static/email-decode.min.js"></script><script>
/* ================================================================
   API KONFIGURACE - UPRAVTE TUTO CAST
   ================================================================ */
var API_URL = 'https://script.google.com/macros/s/AKfycbz1eDVYrDXw5xrcTnU141WVpcth2Yco6WUXwc4kbMphBuYPH-aWwfOSq8DiTyaMTSEfmw/exec';
var GOOGLE_CLIENT_ID = 'VLOZTE_CLIENT_ID.apps.googleusercontent.com';

/* Aktualni uzivatel */
var currentUser = null;

/* ================================================================
   DYNAMICKE NACITANI KOCEK Z API
   ================================================================ */
var catsData = [];
var catsLoaded = false;

function loadCatsFromAPI() {
  if (catsLoaded) return Promise.resolve(catsData);
  
  return fetch(API_URL + '?action=getPublicCats')
    .then(function(response) { return response.json(); })
    .then(function(data) {
      catsData = data.map(function(cat) {
        var badgeClass = '';
        if (cat.badge === 'Nova') badgeClass = 'new';
        else if (cat.badge === 'Urgentni') badgeClass = 'urgent';
        else if (cat.badge === 'Specialni pece') badgeClass = 'special';
        
        if (cat.status === 'zamluvena') {
          cat.badge = 'Zamluvena';
          badgeClass = 'reserved';
        }
        
        return {
          id: cat.id,
          name: cat.name,
          age: cat.age,
          sex: cat.sex,
          color: cat.color,
          weight: cat.weight,
          img: '<img src="' + (cat.photoUrl || 'placeholder.png') + '" alt="' + cat.name + '">',
          additionalPhotos: cat.additionalPhotos || [],
          badge: cat.badge || '',
          badgeClass: badgeClass,
          desc: cat.description,
          tags: cat.tags || [],
          personality: cat.personality || [],
          story: cat.story || '',
          handicap: cat.handicap || '',
          status: cat.status,
          dateAdded: cat.dateAdded
        };
      });
      catsLoaded = true;
      return catsData;
    })
    .catch(function(error) {
      console.error('Chyba pri nacitani kocek:', error);
      // Fallback na staticka data pokud API nefunguje
      return catsData;
    });
}

/* ================================================================
   COLOR MAP
   ================================================================ */
var colorMap = {
  'orange': 'Ryšavá',
  'tabby': 'Mourovatá',
  'black': 'Černá',
  'white': 'Bílá',
  'tricolor': 'Tříbarevná',
  'gray': 'Šedá'
};

/* ================================================================
   NAVIGATION
   ================================================================ */
function showView(id) {
  document.querySelectorAll('.view').forEach(function(v) { v.classList.remove('active'); });
  var el = document.getElementById(id);
  if (el) {
    el.classList.add('active');
    /* Reset scroll position */
    var scrollable = el.querySelector('.cats-content, .cat-detail-page, .depo-page, .donate-page, .magazine');
    if (scrollable) scrollable.scrollTop = 0;
  }
}

/* ================================================================
   LANDING SECTIONS
   ================================================================ */
var sectionsEl = document.getElementById('sections');
var sectionEls = sectionsEl ? sectionsEl.querySelectorAll('.section') : [];
var currentSection = 0;

function scrollToSection(index) {
  if (sectionEls[index]) {
    sectionEls[index].scrollIntoView({ behavior: 'smooth' });
    currentSection = index;
    updateTheme(index);
  }
}

function scrollNext() {
  if (currentSection < sectionEls.length - 1) scrollToSection(currentSection + 1);
}

function scrollPrev() {
  if (currentSection > 0) scrollToSection(currentSection - 1);
}

if (sectionsEl) {
  var scrollTimeout;
  sectionsEl.addEventListener('scroll', function() {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(function() {
      var scrollTop = sectionsEl.scrollTop;
      var height = sectionsEl.clientHeight;
      var newSection = Math.round(scrollTop / height);
      if (newSection !== currentSection) {
        currentSection = newSection;
        updateTheme(newSection);
      }
    }, 50);
  });
  updateTheme(0);
}

function updateTheme(index) {
  var section = sectionEls[index];
  if (!section) return;
  var theme = section.getAttribute('data-theme');

  // Header
  var header = document.getElementById('landingHeader');
  if (header) { header.className = 'header ' + theme; }

  // Logo swap
  var logoImg = document.querySelector('#landingLogoIcon .logo-img');
  if (logoImg) { logoImg.src = theme === 'light' ? 'logo2.png' : 'logo.png'; }

  // Sidebar left
  var sbl = document.getElementById('sidebarLeft');
  if (sbl) { sbl.className = 'sidebar-left ' + theme; }

  // Sidebar items active state
  var sidebarItems = document.querySelectorAll('.sidebar-items .sidebar-item');
  sidebarItems.forEach(function(item, i) {
    if (i === index) {
      item.classList.add('active');
    } else {
      item.classList.remove('active');
    }
  });

  // Progress fill
  var progressFill = document.getElementById('progressFill');
  if (progressFill) {
    var percentage = ((index + 1) / sectionEls.length) * 100;
    progressFill.style.height = percentage + '%';
  }

  // Sidebar right numbers
  var numbers = document.querySelectorAll('#sidebarRight .number-item');
  numbers.forEach(function(n, i) {
    n.className = 'number-item ' + (theme === 'light' ? 'black' : 'white') + (i === index ? ' active' : '');
  });

  // Arrows
  var arrows = document.getElementById('landingArrows');
  if (arrows) { arrows.className = 'arrows ' + theme; }
}

/* ================================================================
   CATS DATA - FALLBACK (pouzije se pokud API nefunguje)
   ================================================================ */
var fallbackCatsData = [
  { id: 'micka', name: 'Micka', age: '2 roky', sex: 'Kocka', color: 'orange', img: '<img src="1.png" alt="Micka">', badge: 'Nova', badgeClass: 'new', desc: 'Mlada hrava kocicka nalezena u kontejneru. Miluje mazleni a hru s provazkem.', tags: ['Kastrovana', 'Ockovana', 'FIV neg.'], story: 'Micka byla nalezena v krabici u kontejneru v listopadu 2024. Byla podvyzivena a vydesena, ale rychle se zotavila. Dnes je to hrava a pratelska kocka, ktera miluje lidskou spolecnost a neda dopustit na slunicko na parapetu.' }
];

// Pokud API nefunguje, pouzij fallback
if (catsData.length === 0) {
  catsData = fallbackCatsData;
}

function renderCats(filter) {
  var grid = document.getElementById('catsGrid');
  if (!grid) return;
  
  grid.innerHTML = '<div style="text-align:center;padding:60px;color:rgba(0,0,0,0.4);">Nacitam kocky...</div>';
  
  loadCatsFromAPI().then(function() {
    grid.innerHTML = '';
    var filtered = catsData;
    
    if (filter && filter.sex) {
      filtered = filtered.filter(function(c) { return c.sex === filter.sex; });
    }
    if (filter && filter.color) {
      filtered = filtered.filter(function(c) { return c.color === filter.color; });
    }
    
    var countEl = document.querySelector('.cats-title');
    if (countEl) {
      countEl.textContent = 'Zobrazeno ' + filtered.length + (filtered.length === 1 ? ' kocka' : filtered.length < 5 ? ' kocky' : ' kocek');
    }
    
    if (filtered.length === 0) {
      grid.innerHTML = '<div style="text-align:center;padding:60px;color:rgba(0,0,0,0.4);">Zadne kocky neodpovidaji filtru</div>';
      return;
    }
    
    filtered.forEach(function(cat) {
      var badgeHtml = cat.badge ? '<div class="cat-card-badge ' + cat.badgeClass + '">' + cat.badge + '</div>' : '';
      var tagsHtml = cat.tags.map(function(t) {
        return '<span class="cat-tag">' + t + '</span>';
      }).join('');
      var html = '<div class="cat-card" onclick="showCatDetail(\'' + cat.id + '\')">' +
        '<div class="cat-card-img ' + cat.color + '">' + badgeHtml + cat.img +
        '<div class="cat-card-heart"><svg viewBox="0 0 24 24"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg></div>' +
        '</div>' +
        '<div class="cat-card-info">' +
        '<div class="cat-card-name">' + cat.name + '</div>' +
        '<div class="cat-card-desc">' + cat.desc + '</div>' +
        '<div class="cat-card-tags">' + tagsHtml + '</div>' +
        '</div></div>';
      grid.innerHTML += html;
    });
  });
}

function showCatDetail(catId) {
  loadCatsFromAPI().then(function() {
    var cat = catsData.find(function(c) { return c.id === catId; });
    if (!cat) return;

    document.getElementById('catDetailBreadcrumb').textContent = cat.name;

    var tagsHtml = cat.tags.map(function(t) {
      return '<span class="cat-detail-badge">' + t + '</span>';
    }).join('');
    
    // Pridame povahu jako tagy
    if (cat.personality && cat.personality.length > 0) {
      tagsHtml += cat.personality.map(function(p) {
        return '<span class="cat-detail-badge personality">' + p + '</span>';
      }).join('');
    }

    var colorLabel = colorMap[cat.color] || cat.color;
    
    // Datum pridani
    var dateAdded = cat.dateAdded ? new Date(cat.dateAdded).getFullYear() : new Date().getFullYear();
    
    // Hendikep info
    var handicapHtml = '';
    if (cat.handicap) {
      handicapHtml = '<div class="cat-handicap"><strong>Hendikep:</strong> ' + cat.handicap + '</div>';
    }
    
    // Tlacitka - pro zamluvene kocky jine
    var buttonsHtml = '';
    if (cat.status === 'zamluvena') {
      buttonsHtml = '<div class="reserved-notice">Tato kocka je jiz zamluvena</div>' +
        '<button class="sponsor-btn" onclick="showView(\'view-donate\')">Sponzorovat ' + cat.name + '</button>';
    } else {
      buttonsHtml = '<button class="adopt-btn" onclick="openAdoptForm(\'' + cat.name + '\')"><svg viewBox="0 0 24 24"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>Chci adoptovat ' + cat.name + '</button>' +
        '<button class="sponsor-btn" onclick="showView(\'view-donate\')">Sponzorovat ' + cat.name + '</button>';
    }

    var html = '<div class="cat-detail">' +
      '<div class="cat-detail-gallery ' + cat.color + '">' + cat.img + '</div>' +
      '<div class="cat-detail-info">' +
      '<div class="cat-detail-badges">' + tagsHtml + '</div>' +
      '<div class="cat-detail-name">' + cat.name + '</div>' +
      '<div class="cat-detail-desc">' + cat.desc + '</div>' +
      handicapHtml +
      '<div class="cat-info-grid">' +
      '<div class="cat-info-item"><div class="cat-info-label">Vek</div><div class="cat-info-value">' + cat.age + '</div></div>' +
      '<div class="cat-info-item"><div class="cat-info-label">Pohlavi</div><div class="cat-info-value">' + cat.sex + '</div></div>' +
      '<div class="cat-info-item"><div class="cat-info-label">Barva</div><div class="cat-info-value">' + colorLabel + '</div></div>' +
      (cat.weight ? '<div class="cat-info-item"><div class="cat-info-label">Vaha</div><div class="cat-info-value">' + cat.weight + '</div></div>' : '') +
      '<div class="cat-info-item"><div class="cat-info-label">V utulku od</div><div class="cat-info-value">' + dateAdded + '</div></div>' +
      '</div>' +
      buttonsHtml +
      '<div class="cat-story"><div class="cat-story-title">Pribeh ' + cat.name + '</div><div class="cat-story-text">' + (cat.story || 'Pribeh bude doplnen.') + '</div></div>' +
      '</div></div>';

    document.getElementById('catDetailContent').innerHTML = html;
    showView('view-cat-detail');
  });
}

function openAdoptForm(catName) {
  document.getElementById('adopceFormTitle').textContent = 'Adopce - ' + catName;
  document.getElementById('adopceFormCatName').textContent = 'Žádost o adopci pro kočku ' + catName;
  showView('view-adopce-form');
}

/* ================================================================
   FILTERS
   ================================================================ */
var activeFilters = { sex: null, color: null };
var filterColorMap = {
  'Ryzák': 'orange', 'Šedá': 'gray', 'Černá': 'black',
  'Bílá': 'white', 'Trikolor': 'tricolor', 'Mourovatá': 'tabby'
};
var filterSexMap = { 'Kočka': 'Kočka', 'Kocour': 'Kocour' };

function toggleFilter(el) {
  var section = el.closest('.filter-section');
  var title = section.querySelector('.filter-title').textContent;
  var value = el.textContent.trim();

  if (title === 'Pohlaví') {
    section.querySelectorAll('.filter-tag').forEach(function(t) { t.classList.remove('active'); });
    if (value === 'Všechny' || (activeFilters.sex && filterSexMap[value] === activeFilters.sex)) {
      activeFilters.sex = null;
      section.querySelector('.filter-tag').classList.add('active');
    } else {
      el.classList.add('active');
      activeFilters.sex = filterSexMap[value] || null;
    }
  } else if (title === 'Barva') {
    if (el.classList.contains('active')) {
      el.classList.remove('active');
      activeFilters.color = null;
    } else {
      section.querySelectorAll('.filter-tag').forEach(function(t) { t.classList.remove('active'); });
      el.classList.add('active');
      activeFilters.color = filterColorMap[value] || null;
    }
  } else {
    /* Vek and Stav - visual toggle only */
    section.querySelectorAll('.filter-tag').forEach(function(t) { t.classList.remove('active'); });
    el.classList.add('active');
  }
  renderCats(activeFilters);
}

