/* Kopirovani cisla uctu */
function copyAccountNumber() {
  var accountNumber = '2902117429/2010';
  navigator.clipboard.writeText(accountNumber).then(function() {
    alert('Cislo uctu zkopirovano: ' + accountNumber);
  }).catch(function() {
    prompt('Zkopirujte cislo uctu:', accountNumber);
  });
}

/* ================================================================
   LOGIN MODAL
   ================================================================ */
function openLoginModal() {
  document.getElementById('loginOverlay').classList.add('active');
  document.body.style.overflow = 'hidden';
}

function closeLoginModal(event) {
  if (event && event.target !== event.currentTarget) return;
  document.getElementById('loginOverlay').classList.remove('active');
  document.body.style.overflow = '';
}

function loginWithGoogle() {
  // Inicializace Google Sign-In
  if (typeof google === 'undefined') {
    alert('Google Sign-In se nacita, zkuste to znovu za chvili.');
    return;
  }
  
  google.accounts.id.initialize({
    client_id: GOOGLE_CLIENT_ID,
    callback: handleGoogleLogin
  });
  
  google.accounts.id.prompt();
}

function handleGoogleLogin(response) {
  // Dekodovani JWT tokenu
  var payload = JSON.parse(atob(response.credential.split('.')[1]));
  
  var userData = {
    email: payload.email,
    name: payload.name,
    picture: payload.picture
  };
  
  // Odeslani na server
  fetch(API_URL, {
    method: 'POST',
    body: JSON.stringify({
      action: 'loginUser',
      user: userData
    })
  })
  .then(function(r) { return r.json(); })
  .then(function(data) {
    if (data.success) {
      currentUser = data.user;
      closeLoginModal();
      updateUserUI();
      if (data.isNew) {
        alert('Vitejte, ' + currentUser.name + '! Vas ucet byl vytvoren.');
      }
    } else {
      alert('Chyba pri prihlaseni');
    }
  })
  .catch(function(err) {
    console.error('Login error:', err);
    alert('Chyba pri prihlaseni');
  });
}

function updateUserUI() {
  // Nahrazeni ikony panacka za avatar
  var userIcons = document.querySelectorAll('.user-icon');
  userIcons.forEach(function(icon) {
    if (currentUser) {
      var initials = currentUser.name.split(' ').map(function(n) { return n[0]; }).join('').toUpperCase();
      var avatar = document.createElement('div');
      avatar.className = 'user-avatar-header';
      avatar.textContent = initials;
      avatar.onclick = function() { toggleUserDropdown(); };
      icon.parentNode.replaceChild(avatar, icon);
    }
  });
}

function toggleUserDropdown() {
  var dropdown = document.getElementById('userDropdownMenu');
  if (dropdown) {
    dropdown.classList.toggle('active');
  } else {
    // Vytvorit dropdown
    var menu = document.createElement('div');
    menu.id = 'userDropdownMenu';
    menu.className = 'user-dropdown-menu active';
    menu.innerHTML = '<div class="dropdown-item" onclick="showView(\'view-profile\')">' +
      '<svg viewBox="0 0 24 24"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/><circle cx="12" cy="7" r="4"/></svg>' +
      'Muj profil</div>' +
      '<div class="dropdown-item" onclick="showView(\'view-donations\')">' +
      '<svg viewBox="0 0 24 24"><path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/></svg>' +
      'Moje prispevky</div>' +
      '<div class="dropdown-item" onclick="showView(\'view-expenses\')">' +
      '<svg viewBox="0 0 24 24"><line x1="12" y1="1" x2="12" y2="23"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>' +
      'Za co se utratilo</div>' +
      '<div class="dropdown-item logout" onclick="logoutUser()">' +
      '<svg viewBox="0 0 24 24"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"/><polyline points="16 17 21 12 16 7"/><line x1="21" y1="12" x2="9" y2="12"/></svg>' +
      'Odhlasit se</div>';
    
    event.target.parentNode.appendChild(menu);
  }
}

function logoutUser() {
  currentUser = null;
  location.reload();
}

function openAdminLogin() {
  document.getElementById('loginOverlay').classList.remove('active');
  document.getElementById('adminLoginOverlay').classList.add('active');
}

function closeAdminLogin(event) {
  if (event && event.target !== event.currentTarget) return;
  document.getElementById('adminLoginOverlay').classList.remove('active');
  document.body.style.overflow = '';
}

function backToUserLogin() {
  document.getElementById('adminLoginOverlay').classList.remove('active');
  document.getElementById('loginOverlay').classList.add('active');
}

function submitAdminLogin() {
  var password = document.getElementById('adminPassword').value;
  if (password === '2025') {
    closeAdminLogin();
    document.body.style.overflow = '';
    showView('view-admin');
    loadAdminCats();
  } else {
    alert('Nespravne heslo');
  }
}

/* ================================================================
   ADMIN PANEL
   ================================================================ */
function switchAdminTab(tabEl, tabName) {
  // Tabs
  document.querySelectorAll('.admin-tab').forEach(function(t) {
    t.classList.remove('active');
  });
  tabEl.classList.add('active');
  
  // Content
  document.querySelectorAll('.admin-tab-content').forEach(function(c) {
    c.classList.remove('active');
  });
  document.getElementById('admin-' + tabName).classList.add('active');
}

function openAddCatModal() {
  var modal = document.createElement('div');
  modal.className = 'login-overlay active';
  modal.id = 'addCatModal';
  modal.onclick = function(e) { if (e.target === modal) closeAddCatModal(); };
  
  modal.innerHTML = '<div class="add-cat-modal" onclick="event.stopPropagation()">' +
    '<div class="login-close" onclick="closeAddCatModal()">' +
    '<svg viewBox="0 0 24 24"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg></div>' +
    '<div class="login-title">Pridat kocku</div>' +
    '<div class="add-cat-form">' +
    '<div class="form-row">' +
    '<div class="form-field"><label>Jmeno *</label><input type="text" id="catName" placeholder="Jmeno kocky"></div>' +
    '<div class="form-field"><label>Vek</label><input type="text" id="catAge" placeholder="napr. 2 roky"></div>' +
    '</div>' +
    '<div class="form-row">' +
    '<div class="form-field"><label>Pohlavi</label><select id="catSex"><option value="Kocka">Kocka</option><option value="Kocour">Kocour</option></select></div>' +
    '<div class="form-field"><label>Barva</label><select id="catColor"><option value="orange">Rysava</option><option value="black">Cerna</option><option value="white">Bila</option><option value="gray">Seda</option><option value="tabby">Mourovata</option><option value="tricolor">Tribarevna</option></select></div>' +
    '</div>' +
    '<div class="form-field"><label>Popis</label><textarea id="catDesc" placeholder="Kratky popis kocky..."></textarea></div>' +
    '<div class="form-field"><label>Pribeh</label><textarea id="catStory" placeholder="Delsi pribeh kocky..."></textarea></div>' +
    '<div class="form-field"><label>Fotka URL</label><input type="text" id="catPhoto" placeholder="URL fotky (volitelne)"></div>' +
    '<div class="form-row">' +
    '<div class="form-field"><label>Status</label><select id="catStatus"><option value="dostupna">Dostupna</option><option value="zamluvena">Zamluvena</option><option value="adoptovana">Adoptovana</option></select></div>' +
    '<div class="form-field"><label>Badge</label><select id="catBadge"><option value="">Zadny</option><option value="Nova">Nova</option><option value="Urgentni">Urgentni</option><option value="Specialni pece">Specialni pece</option></select></div>' +
    '</div>' +
    '<button class="admin-add-btn" style="width:100%;margin-top:20px;" onclick="submitNewCat()">' +
    '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>' +
    'Ulozit kocku</button>' +
    '</div></div>';
  
  document.body.appendChild(modal);
}

function closeAddCatModal() {
  var modal = document.getElementById('addCatModal');
  if (modal) modal.remove();
}

function submitNewCat() {
  var name = document.getElementById('catName').value;
  if (!name) {
    alert('Vyplnte jmeno kocky');
    return;
  }
  
  var catData = {
    name: name,
    age: document.getElementById('catAge').value,
    sex: document.getElementById('catSex').value,
    color: document.getElementById('catColor').value,
    description: document.getElementById('catDesc').value,
    story: document.getElementById('catStory').value,
    photoUrl: document.getElementById('catPhoto').value,
    status: document.getElementById('catStatus').value,
    badge: document.getElementById('catBadge').value,
    tags: [],
    personality: []
  };
  
  fetch(API_URL, {
    method: 'POST',
    body: JSON.stringify({
      action: 'addCat',
      cat: catData
    })
  })
  .then(function(r) { return r.json(); })
  .then(function(data) {
    if (data.success) {
      alert('Kocka pridana!');
      closeAddCatModal();
      loadAdminCats();
    } else {
      alert('Chyba: ' + (data.error || 'Neznama chyba'));
    }
  })
  .catch(function(err) {
    alert('Chyba pri ukladani: ' + err);
  });
}

function loadAdminCats() {
  var container = document.getElementById('adminCatsList');
  container.innerHTML = '<div class="admin-loading">Nacitani kocek...</div>';
  
  fetch(API_URL + '?action=getCats')
    .then(function(r) { return r.json(); })
    .then(function(cats) {
      if (!cats || cats.length === 0) {
        container.innerHTML = '<div class="admin-loading">Zadne kocky v databazi. Kliknete "Pridat kocku".</div>';
        return;
      }
      
      container.innerHTML = cats.map(function(cat) {
        return '<div class="admin-cat-item">' +
          '<div class="admin-cat-photo">' + (cat.photoUrl ? '<img src="' + cat.photoUrl + '" alt="">' : '') + '</div>' +
          '<div class="admin-cat-info">' +
          '<div class="admin-cat-name">' + cat.name + '</div>' +
          '<div class="admin-cat-meta">' + cat.sex + ' | ' + cat.age + '</div>' +
          '</div>' +
          '<div class="admin-cat-status ' + cat.status + '">' + cat.status + '</div>' +
          '<div class="admin-cat-actions">' +
          '<button onclick="deleteCatAdmin(\'' + cat.id + '\')" class="delete-btn">' +
          '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="3 6 5 6 21 6"/><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/></svg>' +
          '</button>' +
          '</div>' +
          '</div>';
      }).join('');
    })
    .catch(function(err) {
      container.innerHTML = '<div class="admin-loading" style="color:#c44;">Chyba: ' + err + '</div>';
    });
}

function deleteCatAdmin(id) {
  if (!confirm('Opravdu smazat tuto kocku?')) return;
  
  fetch(API_URL, {
    method: 'POST',
    body: JSON.stringify({
      action: 'deleteCat',
      id: id
    })
  })
  .then(function(r) { return r.json(); })
  .then(function(data) {
    if (data.success) {
      loadAdminCats();
    } else {
      alert('Chyba pri mazani');
    }
  });
}

function openAddExpenseModal() {
  alert('Formular pro pridani vydaje - bude implementovan');
}
